<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_2sdp">

    <RelativeLayout
        android:id="@+id/rlMainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/rowshadow"
        android:gravity="center_vertical"
        android:padding="@dimen/_8sdp">


        <RelativeLayout
            android:id="@+id/relative_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/relative">

            <TextView
                android:id="@+id/row_vital_list_textview_vitalvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/row_vital_list_textview_vitalunit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_toRightOf="@+id/row_vital_list_textview_vitalvalue"
                android:layout_marginLeft="@dimen/_2sdp"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/relative_arrow"
            android:layout_marginRight="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/row_vital_list_linear"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/row_vital_list_textview_vitaldatetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/row_vital_list_textview_vitaltime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp" />


                    <!--                    <TextView-->
<!--                        android:id="@+id/row_vital_list_textview_vitalvalue"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginLeft="@dimen/_5sdp"-->
<!--                        android:text=""-->
<!--                        android:textColor="@color/parrot_green"-->
<!--                        android:textSize="@dimen/_12sdp" />-->

<!--                    <TextView-->
<!--                        android:id="@+id/row_vital_list_textview_vitalunit"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text=""-->
<!--                        android:layout_marginLeft="@dimen/_2sdp"-->
<!--                        android:textColor="@color/parrot_green"-->
<!--                        android:textSize="@dimen/_12sdp" />-->

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/ic_red_remove"
                android:id="@+id/row_vital_list_imageview_delete" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>