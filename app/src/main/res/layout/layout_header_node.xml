<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_5sdp">



    <TextView
        android:id="@+id/txtHeaderEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_icons"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/txtHeaderEmpty"
        android:paddingLeft="@dimen/_7sdp"
        android:paddingRight="@dimen/_5sdp" />

    <TextView
        android:id="@+id/header_node_value_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/arrow_icon"
        android:layout_toRightOf="@id/img_icons"
        android:ellipsize="end"
        android:padding="@dimen/_7sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_margin="@dimen/_2sdp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_12sdp" />

    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:src="@drawable/ic_add" />


</RelativeLayout>
