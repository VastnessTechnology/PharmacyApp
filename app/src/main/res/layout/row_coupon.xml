<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_85sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/bgshawd"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/row_coupon_imageview_main"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/row_coupon_textview_Apply"
                android:text="Apply"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/parrot_green"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"/>

        <TextView
            android:id="@+id/row_coupon_textview_description"
            style="@style/text_normal_black_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_coupon_imageview_main"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:text="get up to 25% off"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_coupon_textview_description"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_normal_black_18"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text="Coupon Code :- "
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/row_coupon_textview_couponname"
                    style="@style/text_normal_black_18"
                    android:layout_width="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text="ABXBS"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_normal_black_18"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:singleLine="false"

                        android:layout_width="wrap_content"
                        android:text=""
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_10sdp"
                        />

                    <TextView
                        android:id="@+id/row_coupon_textview_ExpiresDate"
                        style="@style/text_normal_black_18"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:layout_width="wrap_content"
                        android:singleLine="false"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>




    </RelativeLayout>


</RelativeLayout>


