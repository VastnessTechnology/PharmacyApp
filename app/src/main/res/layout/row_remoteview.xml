<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/row_chat_relative_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_med" />

    <RelativeLayout
        android:id="@+id/row_chat_relative_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/row_chat_relative_image"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/row_chat_textview_title"
            style="@style/text_normal_black_18"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/row_chat_textview_desc"
            style="@style/text_normal_black_18"
            android:layout_below="@+id/row_chat_textview_title"
            android:layout_marginTop="@dimen/_3sdp"
            android:maxLines="3"
            android:singleLine="false"
            android:text="@string/app_name"
            android:textSize="@dimen/_12sdp" />

    </RelativeLayout>

