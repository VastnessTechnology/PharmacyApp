<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">


    <RelativeLayout
        android:id="@+id/row_Schedule_reminder_relative_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp">


        <ImageView
            android:id="@+id/row_Schedule_reminder_imageview_main"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_notification_pressed" />


        <LinearLayout
            android:id="@+id/row_Schedule_reminder_linear_catalog_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/row_Schedule_reminder_imageview_main"
            android:orientation="horizontal"
            android:weightSum="100">


            <LinearLayout
                android:id="@+id/row_Schedule_reminder_linear_catalog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_weight="60"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/row_Schedule_reminder_textview_time"
                    style="@style/text_normal_black_18"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/row_Schedule_reminder_textview_item"
                    style="@style/text_normal_black_18"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:text=""
                    android:visibility="visible"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:id="@+id/row_schedule_Reminder_textview_Date"
            android:text=""
            android:textSize="@dimen/_12sdp"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_3sdp"/>
    </RelativeLayout>
    <View
        android:id="@+id/fragment_Cart_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        android:layout_below="@+id/row_Schedule_reminder_relative_main"
        android:background="@color/seperator_color" />
</RelativeLayout>