<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/row_my_order_relative_main"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_95sdp"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:background="@drawable/bgshawd"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/row_my_order_relative_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:orientation="vertical"
            android:padding="@dimen/_1sdp">



            <LinearLayout
                android:id="@+id/row_my_order_linear_order_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/row_my_order_textview_order_value"
                    style="@style/text_normal_black_18"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Order VG-51147"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/row_my_order_textview_order_date_value"
                    style="@style/text_normal_black_18"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Wed , 15  Dec 2021"
                    android:layout_gravity="right|center"
                    android:gravity="right"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_my_order_linear_order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/row_my_order_textview_Order_status"
                        style="@style/text_normal_black_18"
                        android:layout_width="wrap_content"
                        android:text="@string/order_status"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        style="@style/text_normal_black_18"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/row_my_order_textview_status_value"
                        style="@style/text_normal_black_18"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="Pending"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/row_my_order_textview_Order_amount"
                        style="@style/text_normal_black_18"
                        android:layout_width="wrap_content"
                        android:text="Order Amount"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        style="@style/text_normal_black_18"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/row_my_order_textview_order_amounrt"
                        style="@style/text_normal_black_18"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="5000"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:id="@+id/row_my_order_linear_payment_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/row_my_order_textview_payment_status"
                        style="@style/text_normal_black_18"
                        android:layout_width="wrap_content"
                        android:text="@string/payment_status"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        style="@style/text_normal_black_18"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/row_my_order_textview_payment_status_value"
                        style="@style/text_normal_black_18"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text=""
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/row_my_order_textview_Details"
                        style="@style/text_normal_black_18"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_gravity="right"
                        android:background="@drawable/commmon_button"
                        android:gravity="center"
                        android:padding="@dimen/_6sdp"
                        android:text="@string/order_details"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

             <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="2">

             </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/row_order_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/row_my_order_relative_top"
            android:layout_marginTop="@dimen/_3sdp"
            android:visibility="gone"
            android:background="@color/toolbar_title" />


        <TextView
            android:id="@+id/row_my_order_textview_reorder"
            style="@style/text_normal_black_18"
            android:layout_width="match_parent"
            android:layout_below="@+id/row_order_view"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/reorde"
            android:visibility="gone"
            android:textColor="@color/parrot_green"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>
