<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_3sdp"

    android:clickable="true">

    <RelativeLayout
        android:id="@+id/popup_filter_list_relative_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/_3sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/dialog_bg_login"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_filter_list_textview_title"
            style="@style/text_normal_black_18"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/_3sdp"
            android:text="@string/filter_list"
            android:textColor="@color/gray"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp" />
        <View
            android:id="@+id/popup_filter_list_view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/popup_filter_list_textview_title"
            android:background="@color/gray" />
        <RelativeLayout
            android:id="@+id/popup_filter_list_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/popup_filter_list_view1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/popup_filter_list_type"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40">

                    <TextView
                        android:id="@+id/popup_filter_list_textview_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:text="Type"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="60">

                        <TextView
                            android:id="@+id/popup_filter_list_edit_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:singleLine="true"
                            android:padding="@dimen/_5sdp"
                            android:drawableRight="@drawable/arrow"
                            android:textSize="@dimen/_13sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_below="@+id/popup_filter_list_edit_type"
                        android:background="@color/gray" />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/popup_filter_list_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/popup_filter_list_relative"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/popup_filter_list_linaer"
            android:padding="@dimen/_1sdp"
            android:layout_below="@+id/popup_filter_list_view"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="center">

                <TextView
                    android:id="@+id/popup_filter_list_Textview_Cancle"
                    style="@style/dialog_blue_button"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/dialog_cancel"
                    android:textColor="@color/parrot_green"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <View
                android:id="@+id/popup_filter_list_linear_view"
                android:layout_width="1dp"
                android:layout_gravity="center"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/gray" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="center">

                <TextView
                    android:id="@+id/popup_filter_list_Textview_OK"
                    style="@style/dialog_blue_button"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@null"
                    android:singleLine="true"
                    android:text="@string/dialog_ok"
                    android:textColor="@color/parrot_green"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>