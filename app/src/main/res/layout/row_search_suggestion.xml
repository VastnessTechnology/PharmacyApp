<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/row_suggestion_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rowshadow"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/row_suggestion_imageview_main"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_close" />

        <TextView
            android:id="@+id/row_Search_suggestion_textview_name"
            style="@style/text_normal_black_18"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:singleLine="false"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/row_suggestion_imageview_main"
            android:textSize="@dimen/_11sdp" />

    </RelativeLayout>

    <View
        style="@style/view_grey_color"
        android:layout_below="@+id/row_suggestion_rel" />

</RelativeLayout>