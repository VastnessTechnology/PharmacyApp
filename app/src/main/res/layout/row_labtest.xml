<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_120sdp"
    android:layout_height="@dimen/_130sdp"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/row_labtest_grid_relative_tops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_3sdp"
        android:background="@drawable/bgshawd"
        android:paddingTop="@dimen/_5sdp">


        <TextView
            android:id="@+id/row_labtest_grid_textview_AddToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/row_labtest_grid_relative_middle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_3sdp"
            android:padding="@dimen/_5sdp"
            android:text="ADD"
            android:textColor="@color/parrot_green"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/row_labtest_grid_textview_outofstock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/row_labtest_grid_relative_middle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_3sdp"
            android:padding="@dimen/_5sdp"
            android:text="@string/out_of_stock"
            android:textColor="@color/red_color"
            android:textSize="@dimen/_11sdp"
            android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/row_labtest_grid_relative_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/row_labtest_grid_textview_medicine_name"
                style="@style/text_normal_black_18"
                android:layout_width="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="2"
                android:singleLine="false"
                android:text="Good Health Pakage"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_labtest_grid_textview_medicine_Description"
                style="@style/text_normal_black_18"
                android:layout_below="@id/row_labtest_grid_textview_medicine_name"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="include 70 lab test"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible" />


            <RelativeLayout
                android:id="@+id/row_product_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/row_labtest_grid_textview_medicine_Description"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/row_labtest_grid_textview_dicount"
                    style="@style/text_normal_black_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="1000 off"
                    android:textColor="@color/sample_dark_red"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/row_labtest_grid_Linear_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_product_discount"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/row_labtest_grid_textview_mrp"
                    style="@style/text_normal_black_18"
                    android:text=" "
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/row_labtest_grid_textview_mrp_price"
                    style="@style/text_normal_black_18"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/row_labtest_grid_textview_mrp"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="2100"
                    android:textSize="@dimen/_10sdp" />


            </RelativeLayout>

            <TextView
                android:id="@+id/row_labtest_grid_textview_price"
                style="@style/text_normal_black_18"
                android:layout_below="@+id/row_labtest_grid_Linear_Price"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="2000"
                android:textSize="@dimen/_10sdp" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>