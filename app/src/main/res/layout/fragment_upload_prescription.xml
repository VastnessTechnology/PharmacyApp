<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aandroid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_upload_prescription_relative_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">


    <include
        android:id="@+id/fragment_upload_prescription_tootlbar"
        layout="@layout/comman_view" />

    <View
        android:id="@+id/fragment_upload_prescription_tootlbar_view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/fragment_upload_prescription_tootlbar"
        android:background="@color/seperator_color"
        android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/fragment_upload_prescription_relative_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_upload_prescription_tootlbar_view"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/fragment_upload_prescription_textview_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:text="@string/uplod_presciption_msg"
                android:textColor="@color/gray"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_upload_prescription_reltive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_upload_prescription_relative_logo"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/rowsshadowcolor"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:padding="@dimen/_7sdp"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/fragment_upload_prescription_linear_camera"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/_3sdp">


                    <ImageView
                        android:id="@+id/fragment_upload_prescription_imageview_camera"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_camera" />

                    <TextView
                        android:id="@+id/fragment_upload_prescription_textview_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/camera"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <View
                    android:id="@+id/fragment_upload_prescription_camera_view"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:background="@color/white" />

                <LinearLayout
                    android:id="@+id/fragment_upload_prescription_linear_gallery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/_3sdp">


                    <ImageView
                        android:id="@+id/fragment_upload_prescription_imageview_gallery"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_gallery" />

                    <TextView
                        android:id="@+id/fragment_upload_prescription_textview_gallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_4sdp"

                        android:text="@string/gallery"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <View
                    android:id="@+id/fragment_upload_prescription_gallery_view"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:background="@color/white" />

                <LinearLayout
                    android:id="@+id/fragment_upload_prescription_linear_myprescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/_3sdp">


                    <ImageView
                        android:id="@+id/fragment_upload_prescription_imageview_myprescription"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_pres" />

                    <TextView
                        android:id="@+id/fragment_upload_prescription_textview_myprescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/presciption"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>


        <ImageView
            android:id="@+id/fragment_upload_prescription_imageview_right"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@+id/fragment_upload_prescription_reltive"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_shiled" />

        <TextView
            android:id="@+id/fragment_upload_prescription_textview_alertMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_upload_prescription_imageview_right"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/upload_prescription_security_msg"
            android:textColor="@color/gray"
            android:textSize="@dimen/_10sdp" />

        <ScrollView
            android:id="@+id/fragment_upload_prescription_summary_scrlView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/fragment_upload_prescription_textview_submit"
            android:layout_below="@+id/fragment_upload_prescription_textview_alertMsg"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/fragment_order_summary_relative_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_upload_prescription_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/fragment_Menu_linaer_Guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/fragment_Menu_imageview_guide"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/aboutus" />

                    <TextView
                        android:id="@+id/fragment_upload_prescription_guide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/fragment_Menu_imageview_guide"
                        android:text="@string/validguide"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/fragment_upload_prescription_imageview_guide"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/roundshadowshape"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_forward" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fragment_Menu_Liner_WhyPrec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/fragment_upload_prescription_imageview"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/aboutus" />

                    <TextView
                        android:id="@+id/fragment_upload_prescription_textview_why"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/fragment_upload_prescription_imageview"
                        android:text="@string/whyupload"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/fragment_upload_prescription_Imageview_why"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/roundshadowshape"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_forward" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <TextView
            android:id="@+id/fragment_upload_prescription_textview_submit"
            style="@style/text_normal_white_18"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/commmon_button"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/continue_text" />


</RelativeLayout>