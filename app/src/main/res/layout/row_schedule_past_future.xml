<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_3sdp"
        android:id="@+id/row_schedule_relative_main"
        android:layout_margin="@dimen/_3sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/row_schedule_relative_main_date_time"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/row_schedule_textview_Schedule_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text=""
            android:textSize="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_3sdp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:id="@+id/row_schedule_textview_Schedule_Date"
            android:text=""
            android:textSize="@dimen/_11sdp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_3sdp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/row_schedule_relative_main_date_time"
            android:id="@+id/row_schedule_relative_main_medicine_name"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/row_schedule_textview_Schedule_Dosage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text=""
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_3sdp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/row_schedule_textview_Schedule_Dosage"
                android:id="@+id/row_schedule_textview_Schedule_MedicineName"
                android:text=""
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_3sdp"/>


        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/fragment_schedule_view_calander"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/row_schedule_relative_main"
        android:background="@color/gray" />

</RelativeLayout>