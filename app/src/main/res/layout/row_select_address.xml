<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp">

        <LinearLayout
            android:id="@+id/row_select_address_linear_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:background="@drawable/rowshadow"
            android:orientation="vertical"
            android:padding="@dimen/_2sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:weightSum="100">


                <LinearLayout
                    android:id="@+id/row_select_address_linear_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/row_select_address_textview_houseno"
                        style="@style/text_normal_black_18"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text=""
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/row_select_address_textview_address_one"
                        style="@style/text_normal_black_18"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:text=""
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/row_select_address_textview_pincode"
                        style="@style/text_normal_black_18"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/row_change_address_linear_action"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/row_change_address_imageview_edit"
                        style="@style/imageview_normal"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_edit" />

                    <ImageView
                        android:id="@+id/row_change_address_imageview_delete"
                        style="@style/imageview_normal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/ic_remove" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>