<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="rectangle">

            <solid android:color="@color/seperator_color_light" />
            <corners android:radius="@dimen/_1sdp" />

        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="@dimen/_2sdp" android:top="@dimen/_1sdp" android:left="@dimen/_2sdp"
        android:right="@dimen/_2sdp">

        <shape  android:shape="rectangle">

            <solid android:color="@color/seperator_color_light" />
            <corners android:radius="@dimen/_1sdp" />


        </shape>

    </item>


</layer-list>