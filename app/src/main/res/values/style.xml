<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/parrot_green</item>
        <item name="colorPrimaryDark">@color/parrot_green</item>
        <item name="colorAccent">@color/parrot_green</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/parrot_green</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="colorControlHighlight">@color/parrot_green</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowIsTranslucent">false</item>

    </style>

    <style name="AppFullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="edittext_normal_black_15">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:singleLine">true</item>
        <item name="android:digits">@string/input_key</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="text_normal_white_18">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:digits">@string/input_key</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SnackbarText">
        <item name="android:paddingBottom">@dimen/_15sdp</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SnackbarText.Action">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TransparentProgressDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:alpha">254</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="dialog_blue_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
        <item name="android:textColor">@color/parrot_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_normal_black_18">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_normal_grey_18">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:digits">@string/input_key</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="view_seperator_dark">
        <item name="android:background">@color/seperator_color_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0.5dp</item>
    </style>
    <style name="view_grey_color">
        <item name="android:background">@color/seperator_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">#FF4081</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/icon_color</item>
    </style>

    <style name="imageview_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="CPB" parent="android:Widget.Holo.ProgressBar"></style>

    <style name="CircularProgressBar" parent="CPB">
        <item name="cpb_color">@color/cpb_default_color</item>
        <item name="cpb_stroke_width">@dimen/cpb_default_stroke_width</item>
        <item name="cpb_min_sweep_angle">@integer/cpb_default_min_sweep_angle</item>
        <item name="cpb_max_sweep_angle">@integer/cpb_default_max_sweep_angle</item>
        <item name="cpb_sweep_speed">@string/cpb_default_sweep_speed</item>
        <item name="cpb_rotation_speed">@string/cpb_default_rotation_speed</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/icon_star_white_review_filled</item>
        <item name="android:minHeight">@dimen/_40sdp</item>
        <item name="android:maxHeight">@dimen/_40sdp</item>
    </style>


    <style name="TreeNodeStyleDivided">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>
    </style>

    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">@dimen/_20sdp</item>
    </style>
</resources>